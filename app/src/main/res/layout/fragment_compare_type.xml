<?xml version="1.0" encoding="utf-8"?>
<com.furkanakdemir.surroundcardview.SurroundCardView
    android:id="@+id/compare_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="10dp"
    android:elevation="5dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="5dp"
    app:scv_duration="1000"
    app:scv_startPoint="bottom_start"
    app:scv_color="#B388FF"
    app:scv_surrounded="true"
    app:scv_width="5dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/compare_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingStart="20dp"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/compare_imageView"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:padding="30dp"
            android:src="@drawable/stopi_icon"/>

    </RelativeLayout>

</com.furkanakdemir.surroundcardview.SurroundCardView>
