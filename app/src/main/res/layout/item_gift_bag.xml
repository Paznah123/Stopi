<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:padding="5dp">

    <com.furkanakdemir.surroundcardview.SurroundCardView
        android:id="@+id/bought_card_view"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:scv_duration="1000"
        app:scv_startPoint="bottom_start"
        app:scv_color="#B388FF"
        app:scv_surrounded="true"
        app:scv_width="5dp"
        android:elevation="5dp"
        android:orientation="vertical"
        app:cardCornerRadius="40dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bought_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="Air Plane"
                android:textSize="20dp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/bought_item_photo"
                android:padding="5dp"
                android:layout_width="150dp"
                android:layout_height="135dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/store_item_title"/>

        </RelativeLayout>
    </com.furkanakdemir.surroundcardview.SurroundCardView>
</androidx.constraintlayout.widget.ConstraintLayout>