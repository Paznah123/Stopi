<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:padding="5dp">

    <com.furkanakdemir.surroundcardview.SurroundCardView
        android:id="@+id/store_item_svc"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        style="@style/svc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/store_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="Air Plane"
                android:textSize="20dp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/store_item_photo"
                android:padding="5dp"
                android:layout_width="150dp"
                android:layout_height="135dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/store_item_title"/>

            <TextView
                android:id="@+id/store_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/store_item_photo"
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                android:text="100000 $"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </com.furkanakdemir.surroundcardview.SurroundCardView>
</androidx.constraintlayout.widget.ConstraintLayout>

