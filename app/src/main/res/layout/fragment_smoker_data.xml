<?xml version="1.0" encoding="utf-8"?>
<com.furkanakdemir.surroundcardview.SurroundCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/progress_stats"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/svc"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/dummy_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/progress_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="After Stopping"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/progress_cigs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress_title"
            android:paddingBottom="5dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/progress_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress_cigs"
            android:paddingBottom="5dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/progress_life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress_money"
            android:paddingBottom="5dp"
            android:textSize="20dp" />

    </RelativeLayout>

</com.furkanakdemir.surroundcardview.SurroundCardView>
