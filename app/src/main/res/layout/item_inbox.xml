<?xml version="1.0" encoding="utf-8"?>
<com.furkanakdemir.surroundcardview.SurroundCardView
    android:id="@+id/surround_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:scv_duration="1000"
    app:scv_startPoint="bottom_start"
    app:scv_color="#B388FF"
    app:scv_surrounded="true"
    app:scv_width="5dp"
    android:elevation="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/email_user_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/email_title"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Email title"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/email_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/email_user_photo"
        android:layout_below="@id/email_title"
        android:layout_marginStart="5dp"
        android:text="Email Message"
        android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_user_photo"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/email_delete"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="@color/purple_200"
                android:text="delete"
                android:textSize="10dp"
                app:cornerRadius="15dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/email_reply"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/purple_200"
                android:text="reply"
                android:textSize="10dp"
                app:cornerRadius="15dp" />

        </LinearLayout>
    </RelativeLayout>
</com.furkanakdemir.surroundcardview.SurroundCardView>