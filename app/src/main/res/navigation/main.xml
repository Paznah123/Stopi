    android:id="@+id/main"
    app:startDestination="@id/progress_item">

    <fragment
        android:id="@+id/inbox_item"
        android:name="com.example.Stopi.fragments.InboxFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_inbox" />

    <fragment
        android:id="@+id/progress_item"
        android:name="com.example.Stopi.fragments.ProgressFragment"
