<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogCustom">
        <item name="android:splitMotionEvents">false</item>
        <item name="android:headerBackground">@drawable/background</item>
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">15dp</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    //======================================

    <style name="TextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">?colorOnSecondary</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="placeholderTextColor">?colorOnSecondary</item>
    </style>

    //======================================

    <style name="ButtonDesign">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColorHint">?colorOnSecondary</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="android:textSize">10dp</item>
        <item name="placeholderTextColor">?colorOnSecondary</item>
    </style>

    //======================================

    <style name="svc">
        <item name="elevation">5dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">5dp</item>
        <item name="scv_color">?colorPrimary</item>
        <item name="scv_surrounded">true</item>
        <item name="scv_width">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    //======================================

    <style name="text">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    //======================================

    <style name="title">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>